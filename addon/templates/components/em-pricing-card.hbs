{{#if (eq flavor "materialize")}}
  <div class="card center {{if isSelected "z-depth-2 amber lighten-5"}}">
    <div class="card-content {{cardContentClassNames}}" {{action "select"}}>
      <ul class="price-features">
        <li class="title"><h4>{{named-yield "title" this}}</h4></li>
        <li class="description">{{named-yield "description" this}}</li>
        <li class="price">{{named-yield "price" this}}</li>
        {{yield (hash 
          title=(component "block-for" "title" this)
          description=(component "block-for" "description" this)
          price=(component "block-for" "price" this)
          cta=(component "block-for" "cta" this)
          args=plan
        )}}
      </ul>
    </div>
    <div class="card-action">
      <button class="waves-light btn-large waves-effect waves-light {{if isSelected "red" "grey"}}" {{action "select"}}>
        {{#named-yield "cta" this portal-class="em-pricing-card__cta"}}
          {{#if isSelected}}
            <i class="fa fa-check-square-o left"></i>
          {{else}}
            <i class="fa fa-square-o left"></i>
          {{/if}}
        {{/named-yield}}
      </button>
    </div>
  </div>
{{else if (eq flavor "bootstrap")}}
  <div class="panel panel-{{if isSelected "primary" "default"}}">
    <div class="panel-heading">
      <h3 class="panel-title">{{named-yield "title" this}}</h3>
    </div>
    <div class="panel-body">{{named-yield "description" this}}</div>
    <div class="list-group">
      <div class="list-group-item">
        <h6 class="list-group-item-pricing">{{named-yield "price" this}}</h6>
      </div>
    </div>
    <ul class="list-group">
      {{yield (hash 
        title=(component "block-for" "title" this)
        description=(component "block-for" "description" this)
        price=(component "block-for" "price" this)
        cta=(component "block-for" "cta" this)
        args=plan
      )}}
    </ul>
    <div class="panel-footer">
      <button class="btn btn-{{if isSelected "primary" "default"}}" {{action "select"}}>
        {{#named-yield "cta" this portal-class="em-pricing-card__cta"}}
          {{#if isSelected}}
            <i class="fa fa-check-square-o left"></i>
          {{else}}
            <i class="fa fa-square-o left"></i>
          {{/if}}
        {{/named-yield}}
      </button>
    </div>
  </div>
{{else if (eq flavor "mdl")}}
  <div class="mdl-card mdl-shadow--{{if isSelected "8dp" "2dp"}}">
    <div class="mdl-card__title mdl-card--border">
      <h2 class="mdl-card__title-text">{{named-yield "title" this}}</h2>
    </div>
    <div class="mdl-card__title">
      <div class="mdl-card__subtitle-text">{{named-yield "description" this}}</div>
    </div>
    <div class="mdl-card__title">
      <div class="mdl-card__subtitle-text">{{named-yield "price" this}}</div>
    </div>
    <div class="mdl-card__supporting-text">      
      <ul class="mdl-list">
        {{yield (hash 
          title=(component "block-for" "title" this)
          description=(component "block-for" "description" this)
          price=(component "block-for" "price" this)
          cta=(component "block-for" "cta" this)
          args=plan
        )}}
      </ul>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <button class="mdl-button mdl-js-button mdl-button--raised {{if isSelected "mdl-button--accent"}}" {{action "select"}}>
        {{#named-yield "cta" this portal-class="em-pricing-card__cta"}}
          {{#if isSelected}}
            <i class="fa fa-check-square-o left"></i>
          {{else}}
            <i class="fa fa-square-o left"></i>
          {{/if}}
        {{/named-yield}}
      </button>
    </div>
  </div>
{{else if (eq flavor "foundation")}}

{{/if}}